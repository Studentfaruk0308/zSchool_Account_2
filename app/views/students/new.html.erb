    <%= render "layouts/header" %>  

<div class="center">

  <% if @student.errors.any? %>
    <div id="error_explanation" class='validation'>
      <h2>
        <%= pluralize(@student.errors.count, "error") %>
        prohibited creation of this Student:
      </h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1>Creating a NEW STUDENT DATA</h1>
<%= form_for(@student) do |f| %>
  <label>Student Code:</label><br>
  <%= f.text_field :student_code %><br>

  <label>Name of Student</label><br>
  <%= f.text_area :student_name %><br>

  <label>Date of Birth</label><br>
  <%= f.text_area :student_date_of_birth %><br>

  <label>Contact Email</label><br>
  <%= f.text_area :student_email %><br>

  <label>Home Address</label><br>
  <%= f.text_area :student_homeaddress %><br>  

  <label>Contact Mobile</label><br>
  <%= f.text_area :student_mobile_number %><br>

  <label>Gender of Student</label><br>
  <%= f.text_area :student_gender %><br>

  <label>Name of Parent</label><br>
  <%= f.text_area :student_parent_name %><br>

  <label>Enrolment Date</label><br>
  <%= f.text_area :enrolled_date %><br>

  <label>Classroom Name</label><br>
  <%= f.collection_select :classroom, Classroom.all, :id, :classroom_name, { include_blank: false }, { class: "collectionselect" } %><br>

 <label>Tuition Fee Code</label><br>
  <%= f.collection_select :tuitionfee, Tuitionfee.all, :id, :tuitionfee_code, { include_blank: false }, { class: "collectionselect" } %><br>

  <%= f.submit %>
<% end %>

</div>
